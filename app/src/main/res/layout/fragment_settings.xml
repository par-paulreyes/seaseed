<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary"
    tools:context=".fragments.SettingsFragment"
    android:layoutDirection="ltr">



    <ScrollView
        android:id="@+id/mainOverlay"
        android:background="@drawable/wavefaded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:src="@drawable/account_icon" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:text="@string/username"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"/>


            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="185dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/edit_profile"
                android:textAllCaps="false"
                android:fontFamily="@font/lexend"
                android:textColor="@color/white" />

            <LinearLayout
                android:background="@drawable/round_back_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/languageIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/language_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/language"
                        android:fontFamily="@font/lexend"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/languageIcon"/>
                    <Spinner
                        android:id="@+id/languageSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:scaleX="-1"
                        android:spinnerMode="dialog"
                        android:background="@null"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAbout"
                android:background="@drawable/round_back_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/aboutIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/about_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/about"
                        android:fontFamily="@font/lexend"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/aboutIcon"/>

                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/arrow_back_icon"
                        android:scaleX="-1"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnLogout"
                android:background="@drawable/risky_action_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_gravity="bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/logoutIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/logout_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/logout"
                        android:fontFamily="@font/lexend"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/logoutIcon"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <!-- Loading overlay -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:visibility="gone"
        android:backgroundTint="@color/dark_primary">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:indeterminateTint="@color/orange_primary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topRelativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="22sp" />


    </RelativeLayout>

</FrameLayout>